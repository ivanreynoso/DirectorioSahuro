@model DirectorioSahuro.Models.Directorio
@{
    ViewBag.Title = "Detalles de Contacto";
}
<table width="100%">
    <tr>
        <td style="width: 110px">
            <b>Fotografía del Contacto</b>
        </td>
        <td>
            <b>Datos de Contacto</b>
        </td>
    </tr>
    <tr>
        <td align="center">
            <img src='../../@Html.DisplayFor(model => model.FOTOGRAFIA)' alt="NO_IMAGE" height="100px" width="100px" />
        </td>
        <td>
            <div class="display-label">
                <b>NOMBRE</b></div>
            <div class="display-field">
                @Html.DisplayFor(model => model.NOMBRE)
            </div>
            <div class="display-label">
                <b>FECHA_NACIMIENTO</b></div>
            <div class="display-field">
                @DateTime.Parse(Html.DisplayFor(model => model.FECHA_NACIMIENTO).ToString()).ToString("D")
            </div>
            <div class="display-label">
                <b>TELEFONOS</b></div>
            <div class="display-field">
                @{
                    string telefonos = (Html.DisplayFor(model => model.TELEFONOS)).ToString();
                    foreach (string a in telefonos.Split(','))
                    {
                    <p>@a</p>
                    }
                }
            </div>
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Editar Contacto", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Regresar al Directorio", "Index")
</p>
